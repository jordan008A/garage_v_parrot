{% include "partials/_header-admin.html.twig" %}

  <div class="container mt-4">
    <form id="adminForm">
      <div class="mb-3">
        <label for="name" class="form-label">Nom</label>
        <input type="text" class="form-control" maxlength="50">
      </div>
      <div class="mb-3">
