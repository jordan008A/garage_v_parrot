          <th scope="col">KM</th>
          <th scope="col">Carburation</th>
          <th scope="col">Type</th>
          <th scope="col">Fiscale</th>
          <th scope="col">Din</th>
          <th scope="col">Photos</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
