{% extends 'base.html.twig' %}

{% block title %}Admin - Utilisateurs{% endblock %}

{% block body %}

{% include "partials/_header-admin.html.twig" %}

  <div class="container mt-4">
    <form class="user-form update-user-form" id="adminForm" method="POST" action="{{ path('users.update', {'id': user.id}) }}">
      <div class="mb-3">
        <label for="lastname" class="form-label">Nom</label>
        <input type="text" name="lastname" class="form-control" maxlength="50" value="{{ user.lastname }}" required>
      </div>
      <div class="mb-3">
        <label for="firstname" class="form-label">Pr√©nom</label>
        <input type="text" name="firstname" class="form-control" maxlength="50" value="{{ user.firstname }}" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Adresse e-mail</label>
        <input type="email" name="email" class="form-control" value="{{ user.email }}" required>
      </div>
      <div class="d-flex justify-content-around">
        <div>
          <button class="btn-stop btn btn-sm">Annuler</button>
        </div>
        <div>
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('update-user-form') }}">
          <button type="submit" class="btn-update btn btn-sm">Modifier</button>
        </div>
      </div>
    </form>
  </div>

{% endblock %}
