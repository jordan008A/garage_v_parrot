{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
  <div class="row justify-content-center align-items-center">
    <div class="col-md-6">
      <h1 class="text-center h1">Connexion</h1>
      {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}
      <form class="p-4 mx-auto my-5" id="loginForm" action="{{ path('app_login') }}" method="post">
        <div class="mb-3">
          <label for="email" class="form-label text-white">Adresse e-mail</label>
          <input type="email" name="email" class="form-control" placeholder="example@example.fr" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label text-white">Mot de passe</label>
          <input type="password" name="password" class="form-control" placeholder="**********" required>
        </div>
        <button type="submit" class="btn button-t d-block mx-auto">Se connecter</button>
      </form>
    </div>
  </div>
</div>

{% endblock %}
